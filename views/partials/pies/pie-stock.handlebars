<h2>{{pie_name}}

    <button class="toggle-stock pie-button" data-id="{{this.id}}" data-newstock="{{stock}}">
        {{#if stock}}
        <i class="fas fa-plus"></i>{{else}}
        <i class="fas fa-times"></i>{{/if}}
    </button>

    <button class="delete-pie pie-button" data-id="{{this.id}}">
        <i class="far fa-trash-alt"></i>
    </button>
    </button>
</h2>
<h4>{{description}}</h4>